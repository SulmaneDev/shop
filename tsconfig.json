{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "./resources/js/**/*.ts",
    "./resources/js/**/*.js",
    "./resources/js/**/*.tsx",
    "./resources/js/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}